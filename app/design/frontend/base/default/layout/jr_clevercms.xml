<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="catalog.topnav">
            <action method="setTemplate"><template>jr_clevercms/page/html/topmenu.phtml</template></action>
        </reference>
    </default>
    <cms_page_view>
        <reference name="left">
            <block type="jr_clevercms/cms_navigation" name="sidebar" template="cms/sidebar.phtml" before="-">
                <action method="setRootDepth"><depth>0</depth></action>
                <!-- this allows you to set a certain rootlevel, if nothing is provided the current page is the root-->
            </block>
        </reference>
    </cms_page_view>
</layout>