<?xml version="1.0"?>
<config>
    <modules>
        <JR_CleverCms>
            <version>2.1.5</version>
        </JR_CleverCms>
    </modules>
    <global>
        <resources>
            <clever_cms_setup>
                <setup>
                    <module>JR_CleverCms</module>
                    <class>JR_CleverCms_Model_Resource_Setup</class>
                </setup>
            </clever_cms_setup>
        </resources>
        <models>
            <jr_clevercms>
                <class>JR_CleverCms_Model</class>
            </jr_clevercms>
            <cms>
                <rewrite>
                    <page>JR_CleverCms_Model_Cms_Page</page>
                    <page_permission>JR_CleverCms_Model_Cms_Page_Permission</page_permission>
                </rewrite>
            </cms>
            <cms_resource>
                <rewrite>
                    <page>JR_CleverCms_Model_Resource_Cms_Page</page>
                    <page_tree>JR_CleverCms_Model_Resource_Cms_Page_Tree</page_tree>
                    <page_collection>JR_CleverCms_Model_Resource_Cms_Page_Collection</page_collection>
                    <page_permission>JR_CleverCms_Model_Resource_Cms_Page_Permission</page_permission>
                </rewrite>
                <entities>
                    <page_permission><table>cms_page_permission</table></page_permission>
                    <page_tree><table>cms_page_tree</table></page_tree>
                </entities>
            </cms_resource>
            <sitemap_resource>
                <rewrite>
                    <cms_page>JR_CleverCms_Model_Resource_Sitemap_Cms_Page</cms_page>
                </rewrite>
            </sitemap_resource>
            <adminhtml>
                <rewrite>
                    <system_config_source_cms_page>JR_CleverCms_Model_Adminhtml_System_Config_Source_Cms_Page</system_config_source_cms_page>
                </rewrite>
            </adminhtml>
            <mana_seo_resources>
                <rewrite>
                    <urlIndexer_cmsPage>JR_CleverCms_Model_Resource_Mana_Seo_UrlIndexer_CmsPage</urlIndexer_cmsPage>
                </rewrite>
            </mana_seo_resources>
        </models>
        <blocks>
            <jr_clevercms>
                <class>JR_CleverCms_Block</class>
            </jr_clevercms>
            <cms>
                <rewrite>
                    <page>JR_CleverCms_Block_Cms_Page</page>
                </rewrite>
            </cms>
            <adminhtml>
                <rewrite>
                    <cms_page_edit>JR_CleverCms_Block_Adminhtml_Cms_Page_Edit</cms_page_edit>
                    <cms_page_widget_chooser>JR_CleverCms_Block_Adminhtml_Cms_Page_Widget_Chooser</cms_page_widget_chooser>
                    <cms_page_edit_tab_design>JR_CleverCms_Block_Adminhtml_Cms_Page_Edit_Tab_Design</cms_page_edit_tab_design>
                    <cms_page_edit_tab_content>JR_CleverCms_Block_Adminhtml_Cms_Page_Edit_Tab_Content</cms_page_edit_tab_content>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <cms>
                <rewrite>
                    <page>JR_CleverCms_Helper_Cms_Page</page>
                </rewrite>
            </cms>
            <jr_clevercms>
                <class>JR_CleverCms_Helper</class>
            </jr_clevercms>
        </helpers>
        <events>
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <clever_cms>
                        <type>singleton</type>
                        <class>jr_clevercms/adminhtml_cms_page_observer</class>
                        <method>prepareForm</method>
                    </clever_cms>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
            <cms_page_prepare_save>
                <observers>
                    <clever_cms>
                        <type>singleton</type>
                        <class>jr_clevercms/adminhtml_cms_page_observer</class>
                        <method>prepareSave</method>
                    </clever_cms>
                </observers>
            </cms_page_prepare_save>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <clever_cms>
                        <type>singleton</type>
                        <class>jr_clevercms/observer</class>
                        <method>addCleverCmsNodes</method>
                    </clever_cms>
                </observers>
            </page_block_html_topmenu_gethtml_before>
        </events>
    </global>
    <frontend>
        <routers>
            <cms>
                <args>
                    <modules>
                        <JR_CleverCms before="Mage_Cms">JR_CleverCms_Cms</JR_CleverCms>
                    </modules>
                </args>
            </cms>
        </routers>
        <layout>
            <updates>
                <jr_clevercms module="JR_CleverCms">
                    <file>jr_clevercms.xml</file>
                </jr_clevercms>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <JR_CleverCms before="Mage_Adminhtml">JR_CleverCms_Adminhtml</JR_CleverCms>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <jr_clevercms module="JR_CleverCms">
                    <file>jr_clevercms.xml</file>
                </jr_clevercms>
            </updates>
        </layout>
        <translate>
            <modules>
                <JR_CleverCms>
                    <files>
                        <default>JR_CleverCms.csv</default>
                    </files>
                </JR_CleverCms>
            </modules>
        </translate>
    </adminhtml>
</config>